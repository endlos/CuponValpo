<%- model_class = Cupon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @cupon.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_normal) %>:</strong></dt>
  <dd><%= @cupon.precio_normal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_dcto) %>:</strong></dt>
  <dd><%= @cupon.precio_dcto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @cupon.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validez) %>:</strong></dt>
  <dd><%= @cupon.validez %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
  <dd><%= @cupon.stock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto) %>:</strong></dt>
  <dd><%= image_tag @cupon.foto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:empresa_id) %>:</strong></dt>
  <dd><%= @cupon.empresa.nombre %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cupons_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cupon_path(@cupon), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cupon_path(@cupon),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
